html
	head
		title Order Page
			
	body

		include ../partials/head

		div#main
			
		h1 #{order.user}'s Order

		h2 #{order.restaurantName}

		h2 Items ordered

		each item in order.order
			li Qty: #{item.quantity} : #{item.name}
			

		h2 Subtotal : $#{order.subtotal.toFixed(2)}
		
		h2 Tax : $#{order.tax.toFixed(2)}
		
		h2 Delivery Fee : $#{order.fee.toFixed(2)}

		h2 Order Total : $#{order.total.toFixed(2)}
